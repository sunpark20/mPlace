<?xml version="1.0" encoding="utf-8"?>
    <!--android:gravity="center_vertical"-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!--row1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:text="이름"
            style="@style/numSample_title"
            />
        <View
            style="@style/divider_v" />
        <TextView
            android:id="@+id/namet"
            style="@style/numSample"
            />
    </LinearLayout>
    <View
       style="@style/divider_h" />
    <!--222222222222222-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/charac"
            android:text="특징"
            style="@style/numSample_title"
            />
        <View
            style="@style/divider_v" />
        <TextView
            android:id="@+id/charact"
            style="@style/numSample"
            />
    </LinearLayout>
    <View
        style="@style/divider_h" />
    <!--3333333333333-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/desc"
            android:text="설명"
            style="@style/numSample_title"
            />
        <View
            style="@style/divider_v" />
        <TextView
            android:id="@+id/desct"
            style="@style/numSample"
            />
    </LinearLayout>

</LinearLayout>